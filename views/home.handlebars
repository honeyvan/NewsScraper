<div class="container">

    <div class="container">
        <div class="jumbotron jumbotron-fluid">
            <div class="trans">
                <div class="text-center">
                    <h1 class="display-4">Mongo Scraper</h1>
                    <p class="lead">New York Times Edition</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
            <div class="card">
                <div class="card-header">
                    <h4>{{this.title}}</h4>
                </div>
                <div class="card-body">
                    <p class="card-text"> {{this.summary}}</p>
                    <a href={{this.link}} target="_blank">{{this.link}}</a>
                    <br><br>
                    <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
                </div>
            </div>
            {{/each}}
        {{else}}
        <div class="card">
            <div class="card-body">
            <h4>Uh Oh. Looks like we don't have any new articles.</h4>
            </div>
         </div>
        {{/if}}
    </div>
</div>
